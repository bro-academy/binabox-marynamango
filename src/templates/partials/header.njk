<header class="header">
    <div class="header__wrapper">
        <div class="header__burger-group">
          <button type="button" class="header__menu" aria-label="Toggle menu" aria-expanded="false" aria-controls="nav">
            <span class="header__menu-icon"></span>
          </button>
          <a class="logo" {% if header.logo.url %}href="{{ header.logo.url }}"{% endif %}>
            <svg class="logo__img" aria-hidden="true" focusable="false">
              <use href="/img/sprite.svg#{{ header.logo.img }}"></use>
            </svg>
            <svg class="logo__text" aria-hidden="true" focusable="false">
              <use href="/img/sprite.svg#{{ header.logo.text }}"></use>
            </svg>
          </a>
        </div>

        <div class="header__nav-wrapper" id="nav" hidden>
          <form class="search header__search" action="/search" method="get">
            <button class="search__button" type="submit">
              <svg class="search__icon" aria-hidden="true" focusable="false">
                <use href="/img/sprite.svg#{{ header.search.icon }}"></use>
              </svg>
            </button>
            <input class="search__input" type="search" name="q" placeholder="{{ header.search.placeholder }}" minlength="3" required />
          </form>
          {% include "partials/nav.njk" %}
        </div>

        <div class="header__actions">
          {% for button in header.buttons %}
            {% include "partials/button.njk" %}
          {% endfor %}
        </div>
      </div>
    </header>