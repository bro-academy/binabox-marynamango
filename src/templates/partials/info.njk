<div class="info">
                <span class="info__profile info-profile">
                  <img
                    class="info__profile-icon"
                    src="{{ info.authorIcon.src }}"
                    alt="{{ info.authorIcon.alt }}"
                    width="{{ info.authorIcon.width }}"
                    height="{{ info.authorIcon.height }}"
                  />
                  {{ info.author }}
                </span>
                <time class="info__date" datetime="2022-06-20">
                  <img
                    class="info__calendar-icon"
                    src="{{ info.dateIcon.src }}"
                    alt="{{ info.dateIcon.alt }}"
                    width="{{ info.dateIcon.width }}"
                    height="{{ info.dateIcon.height }}"
                  />
                  {{ info.date }}
                </time>
              </div>