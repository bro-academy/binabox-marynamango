{% extends "layouts/base.njk" %}

{% block content %}
<main class="main-container">
      {% include "partials/hero.njk" %}
      <div class="catalog-layout">
        {% include "partials/filter-drawer.njk" %}
        <section class="catalog-content">
          {% include "partials/catalog-heading.njk" %}
          {% include "partials/catalog-list.njk" %}
        </section>
      </div>
    </main>

    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const drawer = document.getElementById('filter_drawer');
        const toggleBtn = document.querySelector('.filter-drawer__toggle');
        const layout = document.querySelector('.catalog-layout');

      if (!drawer || !toggleBtn || !layout) return;

        toggleBtn.addEventListener('click', () => {
          drawer.classList.toggle('filter-drawer--open');
          toggleBtn.classList.toggle('is-open');
          layout.classList.toggle('is-filter-open');
        });
      });
    </script>
{% endblock %}